<p style="color: green"><%= notice %></p>

<h2>Enrollments</h2>
<div id="enrollments">
  <table>
    <thead>
      <tr>
        <th>Date of enrollment</th>
        <th>Method of contact</th>
        <th>Remarks</th>
        <th>Coordinator</th>
        <th>Registry</th>
        <th>Participant</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td><%= formatted_date(enrollment.date_of_enrollment) %></td>
          <td><%= enrollment.method_of_contact %></td>
          <td><%= enrollment&.remarks %></td>
          <td><%= enrollment.coordinator.name %></td>
          <td><%= enrollment.registry.name %></td>
          <td><%= enrollment.participant.name %></td>
          <td><%= link_to "Show", enrollment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New enrollment", new_enrollment_path %>
